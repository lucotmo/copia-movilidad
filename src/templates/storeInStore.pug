extends partials/layout.pug

include components/bc-form.pug
include components/bc-shelf.pug
include components/bc-search.pug 

block append styles
    link(href="files/css/bc-storeInStore.min.css" rel="stylesheet")
block title
    title Bancolombia Movilidad

block vars
    - bodyClass = 'category-page';

block content  
    .category
        .content-page
            .content-filters
                .breadCrumb.bc-sub-header.container
                    .bread-crumb.breadcrumb
                        ul
                            li
                                a(title='Movilidad' href='/') Movilidad
                            li.last
                                strong
                                a(title='Seller').js-seller-name
                    .search-bar__wrapper.js-search-bar
                .store__banner
                    figure
                        picture.js-seller-banner
                            source(media="(max-width: 768px)" srcset="../arquivos/new-banner-store-demo-mobile.png")
                            img(src="../arquivos/new-banner-store-demo.png" alt="Movilidad Bancolombia")
                    .containerArrow
                        a(href="/").backArrow
                            p Volver
                    .content-store
                        .dealer-container
                            .dealer-photo
                                img(src="../arquivos/concesionario-foto.jpg" alt="Concesionario")
                            .contentInfo
                                .dealer-name
                                    p.js-seller-name Tuyomotor S.A.
                                    .dealer-date Concesionario desde Diciembre de 2019
                                .moreInfo 
                                    .dealer-location
                                        .icon
                                        p Ver ubicación
                                    .dealer-phone
                                        .icon
                                        p +57 (3) 443-3340
                                    .dealer-email
                                        .icon
                                        p contacto@tuyomotor.com

                .bc-category-search.close
                    .bc-category-search.close
                    .bc-search__adv-search.bc-btn-icon-ghost
                    p Búsqueda avanzada
                    i.icon-chevron-up

            .content-products
                .products__list.list--two-columns.container
                    // <vtex.cmc:searchResult layout="0887380a-a25d-4375-9f1d-790929840c64" itemCount="4" columnCount="4" />
                    .main
                        p.searchResultsTime
                            span.resultado-busca-numero
                                span.value 14
                            span.resultado-busca-termo
                                span.label Carros cumplen con tus criterios de selección
                                strong.value
                        .sub
                            .resultado-busca-filtro
                                fieldset.orderBy
                                    label Ordenar por:
                                    select#O
                                        option(value='') Selecione
                                        option(value='OrderByPriceASC') Menor Precio
                                        option(value='OrderByPriceDESC') Maior Precio
                                        option(value='OrderByTopSaleDESC') Mais vendidos
                                        option(value='OrderByReviewRateDESC') Melhores avaliables
                                        option(value='OrderByNameASC') A - Z
                                        option(value='OrderByNameDESC') Z - A
                                        option(value='OrderByReleaseDateDESC') Data de lanzamento
                                        option(value='OrderByBestDiscountDESC') Melhor Desconto
                                    i.fenix-icon-arrow2-down
                                fieldset.filterBy
                                    | Itens por pagina:
                                    select#PS
                                        option(selected='selected' value='4') 4
                                        option(value='8') 8
                                        option(value='12') 12
                                        option(value='16') 16
                                    i.fenix-icon-arrow2-down

                        .vitrine.resultItemsWrapper
                            #ResultItems_38862463
                                .n4colunas
                                    ul
                                        li
                                            +bc-shelf-item
                                        li
                                            +bc-shelf-item
                                        li
                                            +bc-shelf-item
                                        li
                                            +bc-shelf-item
                                        li
                                            +bc-shelf-item
                                        li
                                            +bc-shelf-item
                                        li
                                            +bc-shelf-item
                                        li
                                            +bc-shelf-item

                            .pager.bottom
                                ul.pages
                                    li.first.pgEmpty primeiro
                                    li.previous.pgEmpty anterior
                                    li.page-number.pgCurrent 1
                                    li.page-number 2
                                    li.page-number 3
                                    li.page-number 4
                                    li.next próximo
                                    li.last Último

                    .more-products
                        .fenix-icon-spinner
                        p Cargando más carros

    .compare-products.js-compare-list

block beforeScripts
    include components/bc-pageloader.pug

block afterScripts
    script(src="/files/js/bc-store.bundle.min.js")
